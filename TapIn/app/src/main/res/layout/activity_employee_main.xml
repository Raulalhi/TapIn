<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#c6ceff"
    android:orientation="vertical"
    tools:context="com.example.thomas.tapin.EmployeeMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="Log Out"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total_hours"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Total This Week"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/loginButton"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_product"
        android:dividerHeight="15dp"
        android:divider="#c7ceff"
        android:layout_below="@id/total_hours"
        >

    </ListView>

></RelativeLayout>
