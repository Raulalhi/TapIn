<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.emloyeelogin.timetableForm2">

    <TextView
        android:id="@+id/eTimeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Pick End Time"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="#c6ceff"/>

    <TimePicker
        android:id="@+id/etimeSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTimeHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:headerBackground="#3a4cbc"
        android:numbersSelectorColor="#3a4cbc"/>

    <Button
        android:id="@+id/sbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="Submit Schedule"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#6098f2"
        android:background="#e8e8e8"
        />

    <ProgressBar
        android:id="@+id/sProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_alignTop="@+id/etimeSelect"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
